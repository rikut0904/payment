#!/usr/bin/env node

/**
 * 依存モジュール.
 */

var app = require('../app');
var debug = require('debug')('payment:server');
var http = require('http');

/**
 * 環境変数からポートを取得してExpressへ設定する。
 */

var port = normalizePort(process.env.PORT || '3000');
app.set('port', port);

/**
 * HTTPサーバーを作成する。
 */

var server = http.createServer(app);

/**
 * 指定ポートで待ち受ける。
 */

server.listen(port);
server.on('error', onError);
server.on('listening', onListening);

/**
 * ポート値を数値/文字列/falseに正規化する。
 */

function normalizePort(val) {
  // ポート文字列を数値または名前付きパイプに正規化する。
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // 名前付きパイプ
    return val;
  }

  if (port >= 0) {
    // ポート番号
    return port;
  }

  return false;
}

/**
 * HTTPサーバーのerrorイベント処理.
 */

function onError(error) {
  // サーバ起動エラーをわかりやすく出力する。
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // よくある起動エラーをわかりやすく表示する。
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * HTTPサーバーのlisteningイベント処理.
 */

function onListening() {
  // サーバ起動をデバッグ出力する。
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
