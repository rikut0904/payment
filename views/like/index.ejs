<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.css" rel="stylesheet"
    crossorigin="anonymous">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body data-skip-auth-redirect="true">
  <div class="layout">
    <%- include('../partials/header', { title }) %>
      <div class="content">
        <section class="card">
          <h2>
            <%= title %>
          </h2>
          <div class="filter-bar">
            <form class="filter-form" method="get" action="/like">
              <div class="filter-grid">
                <div class="filter-field">
                  <label for="filterUserName">ユーザー名</label>
                  <input type="text" id="filterUserName" name="userName" placeholder="例: 田中"
                    value="<%= (filters && filters.userName) || '' %>">
                </div>
                <div class="filter-field">
                  <label for="filterTitle">商品名</label>
                  <input type="text" id="filterTitle" name="title" placeholder="部分一致で検索"
                    value="<%= (filters && filters.title) || '' %>">
                </div>
                <div class="filter-field">
                  <label for="categoryFilter">カテゴリ</label>
                  <select id="categoryFilter" name="category">
                    <option value="" <%=!(filters && filters.category) ? 'selected' : '' %>>すべて</option>
                    <% (likeCategories || []).forEach(function(category) { %>
                      <option value="<%= category %>" <%=(filters && filters.category)===category ? 'selected' : '' %>>
                        <%= category %>
                      </option>
                      <% }) %>
                  </select>
                </div>
                <div class="filter-field">
                  <label for="sortField">ソート項目</label>
                  <select id="sortField" name="sort">
                    <% (sortOptions || []).forEach(function(option) { %>
                      <option value="<%= option.value %>" <%=sortField===option.value ? 'selected' : '' %>>
                        <%= option.label %>
                      </option>
                      <% }) %>
                  </select>
                </div>
                <div class="filter-field">
                  <label for="sortOrder">並び順</label>
                  <select id="sortOrder" name="order">
                    <% (sortOrderOptions || []).forEach(function(option) { %>
                      <option value="<%= option.value %>" <%=sortOrder===option.value ? 'selected' : '' %>>
                        <%= option.label %>
                      </option>
                      <% }) %>
                  </select>
                </div>
              </div>
              <div class="filter-actions">
                <button type="submit">条件を適用</button>
                <a href="/like" class="reset-link">リセット</a>
              </div>
            </form>
          </div>
          <% if(content && content.length) { %>
            <table class="table">
              <thead>
                <tr>
                  <th>ユーザー名</th>
                  <th>商品名</th>
                  <th>カテゴリ</th>
                  <th>私の購入日</th>
                  <th>操作</th>
                </tr>
              </thead>
              <tbody>
                <% content.forEach(function(item) { %>
                  <tr>
                    <td>
                      <%= item.userName || '' %>
                    </td>
                    <td>
                      <a href="/like/detail/<%= item.id %>">
                        <%= truncate(item.title, 30) %>
                      </a>
                    </td>
                    <td>
                      <%= item.category || '未分類' %>
                    </td>
                    <td>
                      <%= item.date || '' %>
                    </td>
                    <td class="actions-cell">
                      <details>
                        <summary><span class="material-icons">more_vert</span></summary>
                        <div class="actions-menu">
                          <a href="/like/update/<%= item.id %>" class="edit-link">編集</a>
                          <a href="#" class="delete-link" data-id="<%= item.id %>">削除</a>
                        </div>
                      </details>
                    </td>
                  </tr>
                  <% }) %>
              </tbody>
            </table>
            <% } else { %>
              <div class="text-center">
                <h2>おすすめがありません!!</h2>
                <p>おすすめを追加してください!!</p>
              </div>
              <% } %>
                <a href="/like/add" class="btn btn-primary">おすすめを追加</a>
        </section>
      </div>
      <footer>
        <p>&copy; 2025 <%= projectName %>. All rights reserved.</p>
      </footer>
  </div>
  <script id="firebase-config" type="application/json"><%- JSON.stringify(firebaseConfig || {}) %></script>
  <script type="module" src="/javascripts/firebase-auth.js" defer></script>
  <script src="/javascripts/like-actions.js" defer></script>
  <script>
    document.addEventListener('click', (event) => {
      document.querySelectorAll('.actions-cell details[open]').forEach((details) => {
        if (!details.contains(event.target)) {
          details.removeAttribute('open');
        }
      });
    });
  </script>
</body>

</html>